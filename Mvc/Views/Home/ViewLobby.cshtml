@model OMA.Models.Internal.Match

@{
    ViewData["Title"] = Model.LobbyId;
}

<style>
    * {
        box-sizing: border-box;
    }

    .row {
        margin-left: -5px;
        margin-right: -5px;
    }

    .column {
        float: left;
        width: 50%;
        padding: 5px;
    }

    /* Clearfix (clear floats) */
    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
        // border: 1px solid #ddd;
    }

    th, td {
        text-align: left;
        padding: 16px;
    }

    tr td:first-child {
      border-bottom-left-radius: 16px;
      border-top-left-radius: 16px;
    }
    tr td:last-child {
      border-bottom-right-radius: 16px;
      border-top-right-radius: 16px;
    }

    .blue tr:nth-child(even) {
        background-color: #a2a2f2;
    }

    .red tr:nth-child(even) {
        background-color: #f2a2a2;
    }

    .grey tr:nth-child(even) {
        background-color: #d2d2d2
    }

</style>

<div class="text-center">
    <h1>@Model.Name</h1>
    <hr>
    <h3>@Model.BlueWins - @Model.RedWins</h3>
    <div class=row>
        <div class="column blue">
            <table>
                <tr>
                    <th>username</th>
                    <th>avg. score</th>
                    <th>avg. acc</th>
                    <th>cost. team</th>
                    <th>cost. game</th>
                </tr>
                @foreach (var user in @Model.Users.Where(u => u.Team ==
                OMA.Models.Internal.Team.Blue).OrderByDescending(u => u.MatchCostTotal))
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.AverageScore</td>
                        <td>@user.AverageAccuracy.ToString("f2")%</td>
                        <td>@user.MatchCostTeam.ToString("f2")</td>
                        <td>@user.MatchCostTotal.ToString("f2")</td>
                    </tr>
                }
            </table>
        </div>
        <div class="column red">
            <table>
                <tr>
                    <th>username</th>
                    <th>avg. score</th>
                    <th>avg. acc</th>
                    <th>cost. team</th>
                    <th>cost. game</th>
                </tr>
                @foreach (var user in @Model.Users.Where(u => u.Team ==
                OMA.Models.Internal.Team.Red).OrderByDescending(u => u.MatchCostTotal))
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.AverageScore</td>
                        <td>@user.AverageAccuracy.ToString("f2")%</td>
                        <td>@user.MatchCostTeam.ToString("f2")</td>
                        <td>@user.MatchCostTotal.ToString("f2")</td>
                    </tr>
                }
            </table>
        </div>
        <div class="column">
            <table>
                <tr>
                    @{
                        var highestScoreUser = Model.Users.MaxBy(u => u.AverageScore)!;

                        <th>highest avg. score</th>
                        <td>
                            @highestScoreUser.Username
                        </td>
                        <td>
                            @highestScoreUser.AverageScore.ToString()
                        </td>
                    }
                </tr>
                <tr>
                    @{
                        var highestAccUser = Model.Users.MaxBy(u => u.AverageAccuracy)!;

                        <th>highest avg. acc</th>
                        <td>
                            @highestAccUser.Username
                        </td>
                        <td>
                            @highestAccUser.AverageAccuracy.ToString("f2")%
                        </td>
                    }
                </tr>
            </table>
        </div>
        <hr>
        <div class="grey">
            <h3>beatmaps</h3>
            <table>
                <tr>
                    <th>
                        set id
                    </th>
                    <th>
                        name
                    </th>
                    <th>
                        diff
                    </th>
                    <th>
                        sr
                    </th>
                </tr>
                <tr>
                    <td>hello</td>
                    <td>hello</td>
                    <td>hello</td>
                    <td>hello</td>
                </tr>
            </table>
        </div>
    </div>
</div>
